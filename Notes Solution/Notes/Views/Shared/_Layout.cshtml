<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Notes</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-dark">
    <div class="navbar navbar-dark bg-dark">
        <div class="container-fluid" style="display:inline-block;text-align:center;">
            @Html.ActionLink("Notes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </div>
    <div class="container-fluid border-top" >
        <div class="container body-content" style="margin-top:2%">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Notes</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
